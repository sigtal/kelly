<div class="illust-post-form" id="illust-post-form">
  <%= form_with model: @illust,url: { action: "createIllust" } do |form| %>
    <div class="post-list">
      <%= form.label :avatar ,class: 'illust-post-label' %>
      <%= form.file_field :avatar, id: 'avatar-post' %>
      <br>
      <img id="avatar-illust" alt="">
    </div>
      <div class="post-list">
      <%= form.label :fullimage,class: 'illust-post-label' %>
      <%= form.file_field :fullimage, id: 'fullimage-post' %>
      <br>
      <img id="fullimage-illust" alt="">
    </div>
    <div class="post-list">
      <% @tags.each do |tag| %>
        <%= form.check_box :categories,{multiple: true}, tag.category,nil  %>
        <%= form.label :categories, tag.category %>
      <% end %>
    </div>
    <%= form.submit %>
  <% end %>
  <%= form_with model: @tag,url: { action: "createTag" } do |form| %>
    <%= form.text_field :category %>
    <%= form.submit %>
  <% end %>
</div>
