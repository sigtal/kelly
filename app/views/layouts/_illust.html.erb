<!-- イラスト -->
<div class="illust" id="illust">
  <% if logged_in? %>
    <div class="illust-post">
      <div class="illust-post-button" id="illust-post-button">
        <span class="far fa-plus-square"></span>
      </div>
      <div class="illust-post-form" id="illust-post-form">
        <%= form_with model: @illust,url: { action: "create" } do |form| %>
          <%= form.file_field :avatar %>
          <br>
          <%= form.text_field :name %>
          <%= form.submit %>
        <% end %>
      </div>
    </div>
  <% end %>
  <h1>illust</h1>
  <!-- イラストパーツ -->
  <div class="illust-container">
    <div class="illust-content">
      <div class="content">
        <p></p>
        <img class="imagetest" src="assets/test.jpg" alt=""  oncontextmenu="return false;">
      </div>
    </div>
  </div>
  <% @illusts.each do |illust| %>
     <div class="illust-container">
       <div class="illust-content">
         <div class="content">
           <%= image_tag url_for(illust.avatar) %>
         </div>
       </div>
     </div>
   <% end %>
  <!-- float要素破壊 -->
  <div class="clear" />
</div>
<!-- イラスト追加ボタン -->
<div class="reload">
  <a href="#" >More</a>
</div>
