<% if logged_in? %>

  <%= link_to "logout", '/logout', method: :delete %>

<% else %>

  <%= form_with model: @admin,url: { action: "create"} do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %>

    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "login" %>
  <% end %>

<% end %>
